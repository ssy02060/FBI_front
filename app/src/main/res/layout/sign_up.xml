<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34558B">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="165dp"
        android:layout_height="113dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_name_txt"
        app:layout_constraintEnd_toStartOf="@+id/signup_fbi_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/title_book" />

    <TextView
        android:id="@+id/signup_fbi_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="98dp"
        android:text="FBI"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signup_name_tbx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/signup_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="169dp" />

    <TextView
        android:id="@+id/signup_email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/signup_pw_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="369dp" />

    <TextView
        android:id="@+id/signup_pwChk_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="469dp" />

    <EditText
        android:id="@+id/signup_name_tbx"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/signup_txb_shape"
        android:ems="10"
        android:hint="예르마무"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/signup_email_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_name_txt"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/signup_email_tbx"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/signup_txb_shape"
        android:ems="10"
        android:hint="ssy02060@gmail.com"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/signup_pw_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_email_txt"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/signup_pw_tbx"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/signup_txb_shape"
        android:ems="10"
        android:hint="내용을 입력하세요"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/signup_pwChk_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pw_txt"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/signup_pwChk_tbx"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/signup_txb_shape"
        android:ems="10"
        android:hint="내용을 입력하세요"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/signup_confirm_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pwChk_txt"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/signup_confirm_btn"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:background="#3498DB"
        android:text="회원가입하기"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="575dp" />



</androidx.constraintlayout.widget.ConstraintLayout>