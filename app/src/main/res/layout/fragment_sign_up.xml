<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:id="@+id/signUp_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appColor"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/iv_app_icon_signUp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/title_book" />

            <TextView
                android:id="@+id/tv_login_fbi_signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="40dp"
                android:text="FBI"
                android:textColor="@color/white"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="닉네임"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_signUp_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@drawable/et_back_round"
                android:hint="내용을 입력해주세요"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="#838383"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_check_email"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="#00ff0000"
                    android:text="중복 확인"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_signUp_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@drawable/et_back_round"
                android:hint="내용을 입력해주세요"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="#838383"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="비밀번호"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_signUp_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@drawable/et_back_round"
                android:hint="내용을 입력해주세요"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="#838383"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="비밀번호 확인"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_signUp_password_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@drawable/et_back_round"
                android:hint="내용을 입력해주세요"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="#838383"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_signUp_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:background="@drawable/btn_back_normal_blue"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>