<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appColor"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/tv_customSet_category_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="관심있는 카테고리를 알려주세요"
            android:textColor="@color/white"
            android:textSize="25dp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <TableLayout
                android:id="@+id/tl_customSet_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_category_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_category_history"
                        android:scaleType="fitXY"
                        android:text="역사"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                    <Button
                        android:id="@+id/btn_category_psychology"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_category_psychology"
                        android:scaleType="fitXY"
                        android:text="심리"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_category_essay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_category_essay"
                        android:scaleType="fitXY"
                        android:text="에세이"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_category_humanities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_category_humanities"
                        android:scaleType="fitXY"
                        android:text="인문"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_category_science"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_category_science"
                        android:scaleType="fitXY"
                        android:text="과학"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_category_detective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_category_detective"
                        android:scaleType="fitXY"
                        android:text="추리"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/tl_customSet_category_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_category_history_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_white_alpha50"
                        android:scaleType="fitXY"
                        android:text="역사"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="invisible"/>


                    <Button
                        android:id="@+id/btn_category_psychology_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_white_alpha50"
                        android:scaleType="fitXY"
                        android:text="심리"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="invisible"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_category_essay_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_white_alpha50"
                        android:scaleType="fitXY"
                        android:text="에세이"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_category_humanities_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_white_alpha50"
                        android:scaleType="fitXY"
                        android:text="인문"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="invisible"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_category_science_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_white_alpha50"
                        android:scaleType="fitXY"
                        android:text="과학"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="invisible"/>

                    <Button
                        android:id="@+id/btn_category_detective_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/img_white_alpha50"
                        android:scaleType="fitXY"
                        android:text="추리"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="invisible" />
                </TableRow>
            </TableLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_customSet_category_info"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_weight="0.5"
            android:text="마이페이지> 맞춤 설정에서 정보를 설정할 수 있습니다."
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tl_customSet_category"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_customSet_category_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_back_normal_gray"
                android:text="다음에 할게요!"
                android:textColor="#000000"
                android:textSize="17dp" />


            <Button
                android:id="@+id/btn_customSet_category_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/btn_back_normal_blue"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>