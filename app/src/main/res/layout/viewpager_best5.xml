<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/best5_backImg"
        android:layout_width="@dimen/best5_img_width"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/app_name"
        android:gravity="center" />

    <ImageView
        android:id="@+id/best5_shadowImg"
        android:layout_width="@dimen/best5_img_width"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#D9DCDCDC"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:translationY="5dp" />
    <ImageView
        android:id="@+id/best5_bookImg"
        android:layout_width="@dimen/best5_img_width"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/best5_bookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/best5_bookImg"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Hello" />
</RelativeLayout>
